<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="XieHeProject.MainWindow"
        Title="步态采集" Height="838.845" Width="1574.405"
        Loaded="Window_Loaded"
        Closing="Window_Closing" KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        >
    <Grid Margin="10 0 10 0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition  />
            <RowDefinition Height="Auto" MinHeight="200" />
        </Grid.RowDefinitions>




        <Viewbox Grid.Row="1" HorizontalAlignment="Center"   >
            <Image Source="{Binding ColorImageSource}" Stretch="UniformToFill"/>
        </Viewbox>
        <Viewbox Grid.Row="1" HorizontalAlignment="Center"  >
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <CheckBox Grid.Row="2"  Content="显示骨骼"  x:Name="CheckBoxShow" HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Click="ShowsSkeleton" FontSize="16" Checked="CheckBoxShow_Checked" Margin="0,104,812,76" Width="84"/>
        <Button Grid.Row="2" x:Name="playBackButton" Content="回放" HorizontalAlignment="Left" Margin="285,79,0,72"  Width="76" RenderTransformOrigin="-0.107,0.421" Click="PlayBack_Click"/>
        <Button Grid.Row="2" Content="创建服务器" x:Name="CreatServerButton" Click="CreatServerButton_Click" HorizontalAlignment="Left" Margin="405,79,0,0"  VerticalAlignment="Top" Width="75" Height="49"/>
        <Button Grid.Row="2" Content="选择存储目录" x:Name="SetDirButton" Click="SetDirButton_Click" HorizontalAlignment="Left" Margin="153,79,0,0"  VerticalAlignment="Top" Width="75" Height="49" RenderTransformOrigin="0.427,1.714"/>
        <Button Grid.Row="2" Content="载入xef文件"  x:Name="LoadButton" Click="LoadButton_Click" HorizontalAlignment="Left" Margin="519,79,0,0"  VerticalAlignment="Top" Width="75" Height="49"/>
        <TabControl HorizontalAlignment="Left" Height="200" Margin="767,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="500">
            <TabItem Header="步态">
                <Grid Background="White">
                    <Label Content="步宽" Name="StepWidthLabel" HorizontalAlignment="Left" Margin="14,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="左步高" Name="LeftStepHeightLabel" HorizontalAlignment="Left" Margin="14,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.457,1.04"/>
                    <Label Content="左步长" Name="LeftStepLengthLabel" HorizontalAlignment="Left" Margin="14,86,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.375,-0.2"/>
                    <Label Content="右步长" Name="RightStepLengthLabel" HorizontalAlignment="Left" Margin="14,111,0,0" VerticalAlignment="Top"/>
                    <Label Content="右步高" Name="RightStepHeightLabel" HorizontalAlignment="Left" Margin="14,61,0,0" VerticalAlignment="Top"/>
                    <Button Content="步态开始" Name="BuTaiStartButton" Click="BuTaiStartButton_Click" HorizontalAlignment="Left" Margin="247,35,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="步态结束" Name="BuTaiStopButton"  Click="BuTaiStopButton_Click" HorizontalAlignment="Left" Margin="247,86,0,0" VerticalAlignment="Top" Width="75"/>

                </Grid>
            </TabItem>
            <TabItem Header="手态">
                <Grid Background="White" Margin="0,0,0,-87">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="331*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
