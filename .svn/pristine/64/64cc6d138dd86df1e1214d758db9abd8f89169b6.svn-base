        //发送结束录制的指令
        private bool stopRecord()
        {
            if (isRecording)
            {
                IntPtr hwndCalc = FindWindow(null, "步态采集");
                SetForegroundWindow(hwndCalc);
                System.Windows.Forms.SendKeys.SendWait("^2");
